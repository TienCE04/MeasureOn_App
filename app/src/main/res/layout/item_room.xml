<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_bgr"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="#99e4f0"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name_room"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="2dp"
        android:elevation="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/room"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/img_make_copy"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cv_bgr"
        app:layout_constraintTop_toTopOf="@+id/cv_bgr" />

    <TextView
        android:id="@+id/tv_time_create"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:elevation="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/time_create"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/img_make_copy"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_name_room"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_room" />

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="5dp"
        android:elevation="4dp"
        android:padding="10dp"
        android:src="@drawable/icon_delete"
        app:layout_constraintBottom_toBottomOf="@+id/cv_bgr"
        app:layout_constraintEnd_toEndOf="@+id/cv_bgr"
        app:layout_constraintTop_toTopOf="@+id/cv_bgr"
        app:tint="@color/black" />

    <ImageView
        android:id="@+id/img_make_copy"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:elevation="4dp"
        android:padding="10dp"
        android:src="@drawable/icon_copy"
        app:layout_constraintBottom_toBottomOf="@+id/img_delete"
        app:layout_constraintEnd_toStartOf="@+id/img_rename"
        app:layout_constraintTop_toTopOf="@+id/img_delete"
        app:tint="@color/black" />

    <ImageView
        android:id="@+id/img_rename"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:elevation="4dp"
        android:padding="10dp"
        android:src="@drawable/icon_edit"
        app:layout_constraintBottom_toBottomOf="@+id/img_share"
        app:layout_constraintEnd_toStartOf="@+id/img_share"
        app:layout_constraintTop_toTopOf="@+id/img_share" />

    <ImageView
        android:id="@+id/img_share"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:elevation="4dp"
        android:padding="10dp"
        android:src="@drawable/icon_share"
        app:layout_constraintBottom_toBottomOf="@+id/img_delete"
        app:layout_constraintEnd_toStartOf="@+id/img_delete"
        app:layout_constraintTop_toTopOf="@+id/img_delete" />
</androidx.constraintlayout.widget.ConstraintLayout>